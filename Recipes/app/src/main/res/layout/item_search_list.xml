<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E4BAEC"
    android:gravity="top"
    android:orientation="horizontal"
    android:paddingLeft="0dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/add" />


    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipe"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="2dp"
            android:gravity="center_vertical"
            android:minHeight="20dp"
            android:textSize="16sp"
            tools:text="some text for testing" />

        <TextView
            android:id="@+id/time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="5dp"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/NotInStock"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="#D32F2F"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/InStock"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="#1FA826"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/favorites"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/star_favorites"
            app:srcCompat="@drawable/star_favorites"
            tools:srcCompat="@drawable/star_favorites" />

        <ImageView
            android:id="@+id/block1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/a1a21a22"
            app:srcCompat="@drawable/a1a21a22"
            tools:srcCompat="@drawable/a1a21a22" />
    </LinearLayout>

</LinearLayout>
