<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Recipes.screens.search">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Введите рецепт" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#05FFFFFF"
                android:padding="12dp"
                android:paddingLeft="250dp"
                android:paddingTop="150dp"
                android:paddingRight="250dp"
                android:paddingBottom="150dp"
                android:scaleType="centerCrop"
                android:translationX="0dp"
                android:translationY="0dp"
                android:visibility="visible"
                app:srcCompat="@drawable/bbb4"
                tools:ignore="ContentDescription,MissingConstraints"
                tools:srcCompat="@drawable/bbb4" />

            <TextView
                android:id="@+id/Kitchen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:fontFamily="cursive"
                android:paddingLeft="160dp"
                android:text="Тип кухни"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#05FFFFFF"
                android:padding="12dp"
                android:paddingLeft="250dp"
                android:paddingTop="150dp"
                android:paddingRight="250dp"
                android:paddingBottom="150dp"
                android:scaleType="fitXY"
                android:translationX="0dp"
                android:translationY="0dp"
                android:visibility="visible"
                app:srcCompat="@drawable/add"
                tools:ignore="ContentDescription,MissingConstraints"
                tools:srcCompat="@drawable/add" />

            <TextView
                android:id="@+id/TypeoOfFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:fontFamily="cursive"
                android:paddingLeft="160dp"
                android:text="Тип питания"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#05FFFFFF"
                android:padding="12dp"
                android:paddingLeft="250dp"
                android:paddingTop="150dp"
                android:paddingRight="250dp"
                android:paddingBottom="150dp"
                android:scaleType="fitXY"
                android:translationX="0dp"
                android:translationY="0dp"
                android:visibility="visible"
                app:srcCompat="@drawable/add"
                tools:ignore="ContentDescription,MissingConstraints"
                tools:srcCompat="@drawable/add" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:fontFamily="cursive"
                android:paddingLeft="160dp"
                android:text="Тип блюда"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>