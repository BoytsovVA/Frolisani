<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8AF98"
    android:gravity="top"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/note_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:minHeight="64dp"
        android:textSize="16sp"
        tools:text="some text for testing" />


    <ImageView
        android:id="@+id/change"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:background="#07FFFFFF"
        android:src="@drawable/hotpng_com__7_"
        app:srcCompat="@drawable/hotpng_com__7_"
        tools:srcCompat="@drawable/hotpng_com__7_" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/delite1"
        app:srcCompat="@drawable/delite1"
        tools:srcCompat="@drawable/delite1" />

</LinearLayout>
