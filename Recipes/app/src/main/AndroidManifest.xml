            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.Recipes.screens.home" />
        <activity android:name=".screens.details_note.NoteDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
